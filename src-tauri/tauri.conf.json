{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenRedux",
  "version": "0.1.0",
  "identifier": "com.openredux.client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "decorations": false,
        "shadow": true,
        "width": 1200,
        "height": 900,
        "resizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/patcher"
    ],
    "windows": {},
    "macOS": {
      "entitlements": null
    },
    "linux": {}
  },
  "plugins": {
    "updater": {
